<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Active Domains</h3>
      <%= render 'shared/confirmed_domains' %>
	<hr/>
      <h3>Domains (pending confirmation)</h3>
      <%= render 'shared/unconfirmed_domains' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to DerpBack</h1>

    <h2>
	A feedback-collecting plugin that is <em>so easy you'll Derp</em>.
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %> 
